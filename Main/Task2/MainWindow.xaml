<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task2"
        xmlns:WPF="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF" xmlns:PlotView="clr-namespace:PlotView;assembly=PlotView" x:Class="Task2.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <WPF:OpenGLControl x:Name="capture" Resized="capture_Resized" OpenGLDraw="capture_OpenGLDraw" OpenGLInitialized="capture_OpenGLInitialized"/>

        <PlotView:PlotView x:Name="plot" Grid.Column="1"/>
        <!--<Label x:Name="label" Content="Label" Grid.Column="1" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="131"/>-->

    </Grid>
</Window>
